{
  "name": "elm-app-boilerplate",
  "version": "0.4.1",
  "description": "Elm application boilerplate",
  "scripts": {
    "start": "webpack-dev-server --hot --inline",
    "build": "npm run clean && webpack -p --bail",
    "test": "run-p 'test:*'",
    "test:elm": "elm test --warn --compiler node_modules/.bin/elm-make elm-test/TestRunner.elm",
    "test:js": "cross-env NODE_ENV=test karma start --single-run",
    "tdd": "run-p 'tdd:*'",
    "tdd:elm": "nodemon --watch 'elm/' --watch 'elm-test/' --ext elm --exec 'npm run test:elm'",
    "tdd:js": "cross-env NODE_ENV=test karma start",
    "docker-build": "docker build -t gkubisa/elm-app-boilerplate .",
    "docker-run": "docker run --name elm-app-boilerplate -d -p 8081:80 gkubisa/elm-app-boilerplate",
    "docker-start": "docker start elm-app-boilerplate",
    "docker-stop": "docker stop elm-app-boilerplate",
    "docker-rm": "docker rm elm-app-boilerplate",
    "docker-push": "docker push gkubisa/elm-app-boilerplate",
    "prerelease": "run-s build docker-build docker-push",
    "release": "docker tag gkubisa/elm-app-boilerplate gkubisa/elm-app-boilerplate:${npm_package_version} && docker push gkubisa/elm-app-boilerplate:${npm_package_version}",
    "clean": "rm -rf dist elm-stuff/build-artifacts",
    "elm": "elm",
    "elm-repl": "elm repl",
    "elm-package": "elm package",
    "elm-reactor": "elm reactor",
    "elm-make": "elm make",
    "elm-test": "elm test",
    "ncu": "ncu",
    "preversion": "run-s 'ncu -- --error-level 2' test",
    "version": "json -4 -I -f elm-package.json -e \"this.version='${npm_package_version}'\" && git add elm-package.json",
    "postversion": "git push && git push origin v${npm_package_version}",
    "postinstall": "elm package install -y"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": "gkubisa/elm-app-boilerplate",
  "engines": {
    "node": ">= 6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "dirty-chai": "^1.2.2",
    "elm": "^0.18.0",
    "elm-hot-loader": "^0.5.4",
    "elm-test": "^0.18.2",
    "elm-webpack-loader": "^4.1.1",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "jquery": "^3.1.1",
    "json": "^9.0.4",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-coverage": "^1.1.1",
    "karma-dirty-chai": "^1.0.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.1",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.2.0",
    "node-elm-compiler": "^4.2.1",
    "nodemon": "^1.11.0",
    "normalize.css": "^5.0.0",
    "npm-check-updates": "^2.8.9",
    "npm-run-all": "^3.1.2",
    "phantomjs-prebuilt": "^2.1.14",
    "postcss-loader": "^1.2.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
